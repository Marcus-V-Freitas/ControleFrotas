@model X.PagedList.IPagedList<ControleFrotasDLL.BLL.Motorista>
@{
    ViewData["Title"] = "Motoristas";
    var pesquisa = Context.Request.Query["pesquisa"];
}
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<br />
<br />
<h2>Motoristas do Cliente</h2>

<form method="get">
    <div class="form-group">
        <label for="pesquisa">Pesquisar:</label>
        <input type="text" name="pesquisa" id="pesquisa" value="@pesquisa" class="form-control" placeholder="Digite o nome do motorista">
    </div>

    <button type="submit" class="btn btn-primary">OK</button>
</form>

<br />
<br />


<a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().ClienteMotoristaId)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Cliente.Nome)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().EmpresaId)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Cliente.CPFCNPJ)</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ControleFrotasDLL.BLL.Motorista motorista in Model)
                {

                    <tr>
                        <th scope="row">@motorista.ClienteMotoristaId</th>
                        <td>@Html.DisplayFor(model => motorista.Cliente.Nome)</td>
                        <td>@Html.DisplayFor(model => motorista.clienteJuridico.Cliente.Nome)</td>
                        <td>@Html.DisplayFor(model => motorista.Cliente.CPFCNPJ)</td>

                        <td>
                            <a asp-action="Atualizar" asp-route-id="@motorista.ClienteMotoristaId" class="btn btn-secondary">Atualizar</a>
                            <a asp-action="Excluir" asp-route-id="@motorista.ClienteMotoristaId" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina = pagina, pesquisa = pesquisa }))
}
else
{
    <span>Nenhum Registro Cadastrado!</span>
}
