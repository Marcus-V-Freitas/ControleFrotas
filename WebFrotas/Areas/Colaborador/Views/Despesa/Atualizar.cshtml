@model ControleFrotasDLL.BLL.Despesa
@{
    ViewData["Title"] = "Atualizar";
}

<br />
<br />
<form id="frm" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrecoUnitario"></label>
        <input asp-for="PrecoUnitario" class="form-control dinheiro" placeholder="Digite o preço de cada ">
        <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DespesaMedidaId"></label>
        <select asp-for="DespesaMedidaId" class="form-control" asp-items="@ViewBag.UnidadeMedida">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="DespesaMedidaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input asp-for="Link" class="form-control" placeholder="Digite o link da foto">
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DespesaClienteId"></label>
        <select asp-for="DespesaClienteId" class="form-control" asp-items="@ViewBag.Cliente">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="DespesaClienteId" class="text-danger"></span>
    </div>
    <button type="submit" id="send" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>