@model X.PagedList.IPagedList<ControleFrotasDLL.BLL.Seguro>
@{
    ViewData["Title"] = "Seguros";
    var rota = Context.Request.Query["rota"];
    var pesquisa = Context.Request.Query["pesquisa"];
}
@using X.PagedList;
@using X.PagedList.Mvc.Core;


<br />
<br />
<h2>Seguros Oferecidos</h2>


<form method="get">
    <div class="form-group">
        <label for="pesquisa">Pesquisar:</label>
        <input type="text" name="pesquisa" id="pesquisa" value="@pesquisa" class="form-control" placeholder="Digite o nome do fornecedor">
    </div>
    <input type="hidden" name="rota" id="rota" value="@rota">
    <button type="submit" class="btn btn-primary">OK</button>
</form>

<br />
<br />


<a asp-action="Cadastrar" asp-controller="Seguro" asp-area="Colaborador" class="btn btn-primary">Cadastrar</a>

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Nome)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Custo)</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ControleFrotasDLL.BLL.Seguro fornecedor in Model)
                {

                    <tr>
                        <th scope="row">@fornecedor.Id</th>
                        <td>@fornecedor.Nome</td>
                        <td>@fornecedor.Custo</td>
                        <td>
                            <a asp-action="Atualizar" asp-controller="Seguro" asp-area="Colaborador" asp-route-id="@fornecedor.Id" class="btn btn-secondary">Atualizar</a>
                            <a asp-action="Excluir" asp-controller="Seguro" asp-area="Colaborador" asp-route-id="@fornecedor.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Seguro", new { pagina = pagina, pesquisa = pesquisa }))
}
else
{
    <span>Nenhum Registro Cadastrado!</span>
}
