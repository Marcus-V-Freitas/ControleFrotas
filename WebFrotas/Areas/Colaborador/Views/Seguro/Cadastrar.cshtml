@model ControleFrotasDLL.BLL.Seguro
@{
    ViewData["Title"] = "Cadastrar";
}

<br />
<br />

<form id="frm" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Custo"></label>
        <input asp-for="Custo" class="form-control dinheiro" placeholder="Digite o nome">
        <span asp-validation-for="Custo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FornecedorId"></label>
        <select asp-for="FornecedorId" class="form-control" asp-items="@ViewBag.Fornecedor">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="FornecedorId" class="text-danger"></span>
    </div>
    <button type="submit" id="send" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>