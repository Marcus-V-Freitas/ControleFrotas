@model X.PagedList.IPagedList<ControleFrotasDLL.BLL.RegistroDespesa>
@{
    ViewData["Title"] = "Registros";
}
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<br />
<br />
<h2>Registro de Despesas</h2>


<a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().RegistroVeiculoId)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().RegistroMotoristaId)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Total)</th>


                </tr>
            </thead>
            <tbody>
                @foreach (ControleFrotasDLL.BLL.RegistroDespesa registro in Model)
                {

                    <tr>
                        <th scope="row">@registro.Id</th>
                        <td>@Html.DisplayFor(model => registro.VeiculoCliente.Veiculo.Placa)</td>
                        <td>@Html.DisplayFor(model => registro.Motorista.Cliente.Nome)</td>
                        <th scope="row">@registro.Total</th>


                    </tr>
                }
            </tbody>
        </table>
    </div>


    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
}
else
{
    <span>Nenhum Registro Cadastrado!</span>
}
