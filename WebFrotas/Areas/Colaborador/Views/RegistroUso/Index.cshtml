@model X.PagedList.IPagedList<ControleFrotasDLL.BLL.RegistroUso>
@{
    ViewData["Title"] = "RegistroUso";
    var pesquisa = Context.Request.Query["pesquisa"];
}
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<br />
<br />
<h2>Registro de Requisição</h2>

<form method="get">
    <div class="form-group">
        <label for="pesquisa">Pesquisar:</label>
        <input type="text" name="pesquisa" id="pesquisa" value="@pesquisa" class="form-control" placeholder="Digite o nome do motorista">
    </div>

    <button type="submit" class="btn btn-primary">OK</button>
</form>

<br />
<br />

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@TempData["MSG_S"]</p>
}

@if (Model.Count > 0)
{

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Inicio)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Prevista)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().Retorno)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().RegistroUsoMotoristaId)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.First().RegistroVeiculoClienteId)</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ControleFrotasDLL.BLL.RegistroUso registro in Model)
                {

                    <tr>
                        <th scope="row">@registro.Id</th>
                        <th scope="row">@registro.Inicio</th>
                        <th scope="row">@registro.Prevista</th>
                        <th scope="row">@registro.Retorno</th>
                        <td>@Html.DisplayFor(model => registro.Motorista.Cliente.Nome)</td>
                        <td>@Html.DisplayFor(model => registro.VeiculoCliente.Veiculo.Placa)</td>

                        <td>
                            @if (registro.Retorno.Equals(null))
                            {
                            <a asp-action="Devolver" asp-route-id="@registro.Id" class="btn btn-secondary">Devolver</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina = pagina, pesquisa = pesquisa }))
}
else
{
    <span>Nenhum Registro Cadastrado!</span>
}


