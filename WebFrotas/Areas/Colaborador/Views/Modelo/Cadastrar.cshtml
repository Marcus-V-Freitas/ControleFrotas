@model ControleFrotasDLL.BLL.Modelo
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar</h2>

<form id="frm" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MarcaId"></label>
        <select asp-for="MarcaId" class="form-control" asp-items="@ViewBag.Marcas">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="MarcaId" class="text-danger"></span>
    </div>
    <button type="submit" id="send" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>